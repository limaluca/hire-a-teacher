{% extends "layout.njk" %}



{% block content %}
    <div class="card">
        <section class="avatar" style="background-image:url({{animal.avatar_url}})"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Nome</div>
                <div>{{animal.name}}</div>
            </div>
            <div class="item">
                <div>Esp√©cie</div>
                <div>{{animal.species}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{animal.sex}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{animal.age}}</div>
            </div>
            <div class="item">
                <div>Porte</div>
                <div>{{animal.size}}</div>
            </div>
            <div class="item">
                <div>Caracteristicas</div>
                <div>
                    
                    {% for item in animal.highlights %}
                        <span>{{item}}</span>
                    {% endfor %}

                </div>
            </div>
                <a href="/animals/{{animal.id}}/edit">Editar</a>
        </section>
    </div>
{% endblock %}

