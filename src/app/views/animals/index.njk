{% extends "layout.njk" %}

{% block content %}
    <div class="container">
        <a href="/animals/create">Criar</a>
        {% for animal in animals %}
            <div class="little-card">
                <div class="card-avatar">
                    <img src="{{animal.avatar_url}}" alt="animal photo">
                </div>
                <div class="card-details">
                    <h2>{{animal.name}}</h2>
                    <small>{{animal.size}}</small><br>
                    <a href="animals/{{animal.id}}">Ver mais</a>
                </div>
            </div>  
        {% endfor %}
    </div>
{% endblock %}

