
                  <div class="item">
                        <div>Avatar URL</div>
                        <div>
                              <input 
                              type="url" 
                              name="avatar_url"
                              placeholder="https://"
                              value="{{teacher.avatar_url}}">
                        </div>

                  <div class="item">
                        <div>Nome</div>
                        <div>
                              <input 
                              type="text"
                              name="name"
                              placeholder="Nome do professor"
                              value=" {{teacher.name}}"
                              >
                        </div>
                        
                  </div>

                  <div class="item">
                        <div>Data de nascimento</div>
                        <div>
                              <input 
                              type="date" 
                              name="birth_date"
                              value= "{{teacher.birth_date}}"
                              >
                        </div>
                  </div>

                  <div class="item">
                        <div>Grau de Escolaridade</div>
                        <div>
                              <select name="education_level">
                                    <option value="high_school" {% if teacher.education_level=="high_school" %}selected
                                    {% endif %} >Ensino Médio</option>
                                    <option value="college_degree" {% if teacher.education_level=="college_degree" %}selected
                                    {% endif %}>Ensino Superior</option>
                                    <option value="master_degree" {% if teacher.education_level=="master_degree" %}selected
                                    {% endif %}>Possui Mestrado</option>
                                    <option value="doctor_degree" {% if teacher.education_level=="doctor_degree" %}selected
                                    {% endif %}>Possui Doutorado</option>
                                    
                              </select>
                        </div>
                  </div>
                  <div class="item">
                        <div>Tipo de aula</div>
                        <div>
                              <span><input 
                              type="radio" 
                              name="class_type" 
                              value="Online"
                              {% if teacher.class_type == "Online" %}
                              checked
                              {% endif %}>À Distancia</span>
                              
                              <span><input 
                              type="radio" 
                              name="class_type" 
                              value="Presencial"
                              {% if teacher.class_type == "Presencial" %}
                              checked
                              {% endif %}>Presencial</span>
                        </div>
                  </div>
                  <div class="item">
                        <div>Disciplinas Lecionadas</div>
                              <div>
                                    <input 
                                    type="text" 
                                    name="subjects_taught"
                                    placeholder="Digite as disciplinas lecionadas separadas por vírgula"
                                    value=" {{teacher.subjects_taught}} ">
                              </div>
                  </div>
                  

                  <button type="submit">Salvar</button>      
