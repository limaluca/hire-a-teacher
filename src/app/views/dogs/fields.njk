            <div class="item">
                <div>Foto Principal</div>
                <input value="{{dog.avatar_url}}" type="url" name="avatar_url" placeholder="Informe o link de uma foto do bichinho"></input>
            </div>
            <div class="item">
                <div>Nome</div>
                <input name="name" type="text"  placeholder="Informe um nome" value="{{dog.name}}"></input>
            </div>
            <div class="item">
                <div>Espécie</div>
                <select name="species">
                    <option value="cat" {% if dog.species == 'cat' %}
                    selected
                {% endif %}>Gatinho</option>
                    <option value="dog"{% if dog.species == 'dog' %}
                    selected
                {% endif %}>Cãozinho</option>
                </select>
            </div>
            <div class="item">
                <div>Sexo</div>
                
                <select name="sex">
                    <option value="male" {% if dog.sex == 'male' %}
                    selected
                {% endif %}>Macho</option>
                    <option value="female"{% if dog.sex == 'female' %}
                    selected
                {% endif %}>Femea</option>
                </select>
            </div>
            <div class="item">
                <div>Idade</div>
                <select name="age">
                    <option value="puppy"{% if dog.age == 'puppy' %}
                    selected
                {% endif %}>Menos de um ano</option>
                    <option value="child"{% if dog.age == 'child' %}
                    selected
                {% endif %}>Até 2 anos</option>
                    <option value="adult"{% if dog.age == 'adult' %}
                    selected
                {% endif %}>Até 5 anos</option>
                    <option value="senior"{% if dog.age == 'senior' %}
                    selected
                {% endif %}>Até 10 anos</option>
                </select>
            </div>
            <div class="item">
                <div>Porte</div>
                    <input type="radio" name="size" value="short" {% if dog.size == 'short' %}
                    checked
                {% endif %}>
                    <label for="short">Porte</label>      
                    <input type="radio" name="size" value="medium"{% if dog.size == 'medium' %}
                    checked
                {% endif %}>
                    <label for="medium">Médio</label>      
                    <input type="radio" name="size" value="big"{% if dog.size == 'big' %}
                    checked
                {% endif %}>
                    <label for="big">Grande</label>            
            </div>
            <div class="item">
                <div>Caracteristicas</div>
                <input value="{{dog.highlights}}" name="highlights" type="text" placeholder="Informe as caracteristicas separando por vírgula">                 
            </div>

            <button type="submit">Salvar</button>
            
