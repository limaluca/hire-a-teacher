{% extends "layout.njk"%}

{% block head %}

{% endblock head %}

{% block content %}
<div class="card table-container animation-slow-up">
    <div class="header">
        <a href="/students/create">Novo</a>
        <form action="/students" method="GET">
            <input 
            type="text"
            name="filter"
            placeholder="nome"
            value={{filter}}
            >
            <button class="button" type="submit">Filtrar</button>
        </form>
    </div>
      <table width="100%">
        
        <thead>
            <tr>
                <th>Estudante</th>
                <th>Horas para estudar</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody> 
        
            {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image:url({{student.avatar_url}})"></span>                        
                        {{student.name}}
                    </td>
                    <td>{{student.study_hours}}</td>
                    <td>{{student.email}}</td>
                    <td><a href="/students/{{student.id}}">Ver</a></td>
                </tr>
            {% endfor %}
            

        </tbody>

      </table>

      <div class="pagination"
        data-page="{{pagination.page}}"
        data-total="{{pagination.total}}"
        data-filter="{{filter}}"
      ></div>
      
</div>




{% endblock content %}


